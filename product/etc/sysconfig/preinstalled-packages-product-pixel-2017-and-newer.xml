        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>

    <!--  MDS (Modem Diagnostic System) - a Pixel app to configure, diagnose and test
    modem software/hardware
    TODO(b/258069933): Check if this should be preinstalled on SYSTEM user -->
    <install-in-user-type package="com.google.mds">
        <install-in user-type="SYSTEM" />
